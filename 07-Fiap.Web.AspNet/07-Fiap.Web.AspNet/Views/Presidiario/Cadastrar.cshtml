@model Presidiario

@{
    ViewData["Title"] = "Cadastrar";
}

<h2>Cadastro de Presidiário</h2>

@TempData["msg"]

<form asp-action="Cadastrar">
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DataEntrada"></label>
        <input asp-for="DataEntrada" class="form-control" />
        <span asp-validation-for="DataEntrada" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DataSaida"></label>
        <input asp-for="DataSaida" class="form-control" />
        <span asp-validation-for="DataSaida" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NivelEscolaridade"></label>
        <select asp-for="NivelEscolaridade" class="form-control"
                asp-items="@Html.GetEnumSelectList<NivelEscolaridade>()">
            <option>Selecione</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Cela"></label>
        <select asp-for="CelaId" class="form-control" asp-items="@ViewBag.celas">
            <option>Selecione</option>
        </select>
        <span asp-validation-for="CelaId" class="text-danger"></span>
    </div>
    <input type="submit" value="Cadastrar" class="btn btn-success" />
</form>

@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js">
    </script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js">
    </script>
}